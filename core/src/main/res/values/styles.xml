    <style name="Theme.FocusPodcast.MD3.Base" parent="Theme.FocusPodcast.MD3">
        <item name="android:textAllCaps">false</item>
        <item name="android:splitMotionEvents">false</item>
        <!-- 用了这个在有menu弹窗的情况下 切换主题menu图标会不变色-->
        <!--        <item name="mediaRouteTheme">@style/CustomMediaRouterTheme</item>-->
        <item name="background_elevated">@color/background_elevated</item>
        <item name="third_text_color">@color/highlight</item>

        <item name="icon_red">@color/swipe_red</item>
        <item name="icon_yellow">@color/md_yellow_A800</item>
        <item name="icon_green">@color/md_green_500</item>
        <item name="icon_purple">@color/swipe_purple</item>
        <item name="icon_gray">@color/swipe_gray</item>
        <item name="icon_blue">@color/md_blue_A400</item>
    </style>

    <style name="Theme.FocusPodcast.MD3.Base.Black" parent="Theme.FocusPodcast.MD3.Base"/>

    <style name="Theme.FocusPodcast.Light" parent="Theme.Base.FocusPodcast.Light">
        <!-- Room for API dependent attributes -->
    </style>

    <style name="Theme.Base.FocusPodcast.Light" parent="Theme.FocusPodcast.Base.Light">
        <item name="android:textAllCaps">false</item>
        <item name="android:splitMotionEvents">false</item>
<!--        <item name="mediaRouteTheme">@style/CustomMediaRouterTheme</item>-->

        <item name="background_elevated">@color/background_elevated</item>
        <item name="third_text_color">@color/highlight</item>

        <item name="icon_red">@color/md_red_A400</item>
        <item name="icon_yellow">@color/md_yellow_A800</item>
        <item name="icon_green">@color/md_green_500</item>
        <item name="icon_purple">@color/md_deep_purple_500</item>
        <item name="icon_gray">@color/md_grey_800</item>
        <item name="icon_blue">@color/md_blue_A400</item>
    </style>

    <style name="Theme.FocusPodcast.Dark" parent="Theme.FocusPodcast.Base">
        <item name="android:textAllCaps">false</item>
        <item name="android:splitMotionEvents">false</item>
<!--        <item name="mediaRouteTheme">@style/CustomMediaRouterTheme</item>-->

        <item name="background_elevated">@color/background_elevated</item>
        <item name="third_text_color">@color/highlight</item>

        <item name="icon_red">@color/swipe_dark_red</item>
        <item name="icon_yellow">@color/md_yellow_A800</item>
        <item name="icon_green">@color/md_green_500</item>
        <item name="icon_purple">@color/md_deep_purple_300</item>
        <item name="icon_gray">@color/swipe_dark_gray</item>
        <item name="icon_blue">@color/md_blue_500</item>
    </style>


    <style name="Theme.FocusPodcast.TrueBlack" parent="Theme.FocusPodcast.Base.Black">
        <item name="android:textAllCaps">false</item>
        <item name="android:splitMotionEvents">false</item>
<!--        <item name="mediaRouteTheme">@style/CustomMediaRouterTheme</item>-->

        <item name="background_elevated">@color/black</item>
        <item name="third_text_color">@color/highlight_trueblack</item>

        <item name="icon_red">@color/swipe_dark_red</item>
        <item name="icon_yellow">@color/md_yellow_A800</item>
        <item name="icon_green">@color/md_green_500</item>
        <item name="icon_purple">@color/md_deep_purple_300</item>
        <item name="icon_gray">@color/swipe_dark_gray</item>
        <item name="icon_blue">@color/md_blue_500</item>
    </style>


    <style name="AnimationFade">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>


    <style name="Theme.FocusPodcast.VideoPlayer" parent="@style/Theme.FocusPodcast.Dark">
        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="FocusPodcast.TextView.Heading" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="FocusPodcast.TextView.ListItemPrimaryTitle" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="FocusPodcast.TextView.ListItemPrimaryTitle2" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="FocusPodcast.TextView.ListItemSecondaryTitle" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>


    <style name="FocusPodcast.TextView.UnreadIndicator" parent="@android:style/TextAppearance.Small">
        <item name="android:textSize">@dimen/text_size_micro</item>
        <item name="android:textColor">?attr/colorAccent</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="BigBlurryBackground">
        <item name="android:scaleType">centerCrop</item>
        <!-- <item name="android:tint">@color/image_readability_tint</item> -->
        <!-- Reactivate when Glide's tinting has been fixed for Android 5.x
             Remove color filter from ItemlistFragment -->

    </style>

    <style name="ProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/color_progress_seek</item>
    </style>


    <style name="AddPodcastTextView">
        <item name="android:drawablePadding">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="NoButtonRadio" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="buttonCompat">@null</item> <!-- For Android 4.4 -->
        <item name="android:button">@null</item>
    </style>
    <style name="Widget_PlayerFM_PlayPauseButton">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="CircularProgressIndicator_Download">
        <item name="trackThickness">3dp</item>
        <item name="indicatorSize">32dp</item>
        <item name="indicatorInset">4dp</item>
    </style>

    <style name="AnimationActivityTopDown" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/retro_fragment_open_enter</item>
        <item name="android:activityOpenExitAnimation">@anim/retro_fragment_open_exit</item>
        <item name="android:activityCloseEnterAnimation">@anim/retro_fragment_close_enter</item>
        <item name="android:activityCloseExitAnimation">@anim/retro_fragment_close_exit</item>
    </style>
</resources>
